<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
         xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
         x:Class="Phoneword.MainPage">


    <!-- Ajoutez un contrôle VerticalStackLayout avec une orientation verticale et un espacement de 15 unités et une marge intérieure de 20 unités à la page ContentPage : -->
    <VerticalStackLayout Spacing="15" Padding="20">
        <!-- Ajoutez un contrôle Label à la disposition StackLayout : -->
        <Label Text = "Enter a Phoneword" FontSize ="20"/>
        <!-- Un contrôle Entry fournit une zone de texte dans laquelle l’utilisateur peut entrer des données. 
        Dans ce code, la propriété x:Name donne un nom au contrôle. Vous référencerez ce contrôle dans le code de l’application ultérieurement : -->
        <Entry x:Name = "PhoneNumberText" Text = "1-555-NETMAUI" />

        <!-- Deux contrôles Button à la disposition VerticalStackLayout, après le contrôle Entry. Les deux boutons ne font actuellement rien, et le second est désactivé initialement -->
        <Button x:Name = "TranslateButton" Text = "Translate" Clicked = "OnTranslate"/>
        <Button x:Name = "CallButton" Text = "Call" IsEnabled = "False" Clicked = "OnCall"/>
    </VerticalStackLayout>

</ContentPage>
